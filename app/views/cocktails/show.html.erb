<div class="container">
  <%= image_tag "https://source.unsplash.com/featured/?cocktails,#{@cocktail.name}", width: 400, height: 300, crop: :fill %>
  <h1><%= @cocktail.name %></h1>
  <%#= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

  <%= link_to "See all cocktails", cocktails_path %>

    <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>

      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    </div>
  </div>
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
</div>
