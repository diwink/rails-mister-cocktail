<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <ul><% @doses.each do |dose| %>
        <% id = dose.ingredient_id  %>
        <li><%= dose.description %> <%= Ingredient.find(id).name %></li>

      <% end %></ul>


      <%= link_to "See all cocktails", cocktails_path %>
    </div>
  </div>
</div>
